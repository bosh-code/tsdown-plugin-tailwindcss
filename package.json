      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/bosh-code/tsdown-plugin-tailwindcss",
  "keywords": [
    "bundle",
