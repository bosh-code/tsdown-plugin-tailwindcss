    "tailwindcss": "^4.1.14"
  },
  "private": false,
  "repository": "bosh-code/tsdown-plugin-tailwindcss.git",
  "scripts": {
    "build": "tsdown",
    "lint": "eslint .",
    "prepublishOnly": "run-s safe-publish-latest build lint",
